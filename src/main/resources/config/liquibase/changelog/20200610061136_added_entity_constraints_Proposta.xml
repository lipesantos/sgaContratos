<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Proposta.
    -->
    <changeSet id="20200610061136-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="cliente_id"
                                 baseTableName="proposta"
                                 constraintName="fk_proposta_cliente_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cliente"/>

        <addForeignKeyConstraint baseColumnNames="unidade_comercial_id"
                                 baseTableName="proposta"
                                 constraintName="fk_proposta_unidade_comercial_id"
                                 referencedColumnNames="id"
                                 referencedTableName="unidade_comercial"/>

        <addForeignKeyConstraint baseColumnNames="area_cliente_id"
                                 baseTableName="proposta"
                                 constraintName="fk_proposta_area_cliente_id"
                                 referencedColumnNames="id"
                                 referencedTableName="area_cliente"/>

    </changeSet>
</databaseChangeLog>
